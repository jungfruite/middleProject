          member_hartnum,
          member_addr1,
          member_addr2,
          member_wthdrdate,
          member_profileimagepath,
          member_statusmessage,
          member_signdate
         
  FROM MEMBER
  WHERE member_id = #memberId#
 </select>
 
  <select id="getBoard" resultMap="boardMap" parameterClass="String"> 
 SELECT specbrd_srlnmbr,
        specbrd_likenum,
        specbrd_parentserialnum,
