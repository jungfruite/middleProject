 <update id="updateChatHartnum" parameterClass="String">
 UPDATE MEMBER
   SET MEMBER_HARTNUM = (SELECT MEMBER_HARTNUM FROM MEMBER WHERE MEMBER_ID = #memberId#) - 1
 WHERE MEMBER_ID = #memberId#
